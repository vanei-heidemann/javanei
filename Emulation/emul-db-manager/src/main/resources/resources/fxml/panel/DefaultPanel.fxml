<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.40"
            fx:id="defaultPane" id="defaultPane"
            onVisibleChange="#handleVisibleChange"
            fx:controller="com.javanei.emulation.emuldb.controller.DefaultPanelController">
    <left>
        <BorderPane>
            <center>
                <TableView fx:id="platformsMainTable">
                    <columns>
                        <TableColumn id="platformColName" fx:id="platformColName" text="%Platforms"
                                     resizable="false">
                            <cellValueFactory>
                                <javafx.scene.control.cell.PropertyValueFactory property="name" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                    <items>
                        <FXCollections fx:factory="observableArrayList" />
                    </items>
                </TableView>
            </center>
            <bottom>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints percentWidth="100" />
                    </columnConstraints>
                    <Button text="%ImportROMFiles" onAction="#handleImportROMFiles" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Button text="%ImportNoIntroDat" onAction="#handleImportNoIntroDAt" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                </GridPane>
            </bottom>
        </BorderPane>
    </left>
    
    <center>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints percentWidth="50" />
                <ColumnConstraints percentWidth="50" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="50" />
                <RowConstraints percentHeight="50" />
            </rowConstraints>
            
            <HBox GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER" style="-fx-background-color: lightgreen;">
                <Label text="TODO" />
            </HBox>
            <HBox GridPane.columnIndex="1" GridPane.rowIndex="0" alignment="CENTER" style="-fx-background-color: darkgreen;">
                <Label text="TODO" />
            </HBox>
            <HBox GridPane.columnIndex="0" GridPane.rowIndex="1" alignment="CENTER" style="-fx-background-color: lightblue;">
                <Label text="TODO" />
            </HBox>
            <HBox GridPane.columnIndex="1" GridPane.rowIndex="1" alignment="CENTER" style="-fx-background-color: darkblue;">
                <Label text="TODO" />
            </HBox>
        </GridPane>
    </center>
</BorderPane>
